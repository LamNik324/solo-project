<div class="row justify-content-md-center mt-5">
  <h2 class="display-2 text-primary">Name of application!</h2>
</div>
{{#if notFound}}
<div class="row justify-content-md-center mt-5 text-danger">Cannot find such user!</div>
{{/if}}
{{#if invalidPassword}}
<div class="row justify-content-md-center mt-5 text-danger">Invalid password!</div>
{{/if}}
<div class="row justify-content-md-center  mt-5">
  <form method="POST" action="/login">
    <div class="form-group">
      <label for="inputEmail">Email address</label>
      <input required type="email" name="email" class="form-control" name id="inputEmail" aria-describedby="emailHelp">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else. Migh be
        ;)</small>
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input required type="password" name="password" class="form-control" name="password" id="password">
    </div>
    <button type="submit" class="w-100 btn btn-success">Submit</button>
    <a class="w-100 btn btn-primary mt-2" href="/registration">Registration</a>
  </form>
</div>
